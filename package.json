{
  "name": "js-boilerplate",
  "version": "1.0.0",
  "description": "Personal boilerplate",
  "main": "index.js",
  "author": "John Tran",
  "license": "MIT",
  "scripts": {
    "dev": "npm-run-all -p dev:start dev:wds",
    "dev:start": "nodemon -e js,jsx --ignore lib --ignore dist --exec babel-node src/server",
    "dev:wds": "cross-env NODE_ENV=development webpack-dev-server  --progress --mode development --config webpack.config.dev.babel.js",
    "prod": "yarn prod:build && yarn prod:start",
    "prod:analyze": "rimraf lib dist && babel src -d lib --ignore .test.js && cross-env NODE_ENV=analyze webpack -p --progress --mode production --config webpack.config.analyze.babel.js",
    "prod:build": "rimraf lib dist && babel src -d lib --ignore .test.js && cross-env NODE_ENV=production webpack -p --progress --mode production --config webpack.config.prod.babel.js",
    "prod:start": "cross-env NODE_ENV=production pm2 start lib/server && pm2 logs",
    "prod:stop": "pm2 delete server",
    "lint": "eslint src webpack.config.dev.babel.js --ext .js,.jsx",
    "lint-fix": "prettier --single-quote --write \"{,!(dist|flow-typed|lib)/**}/*.{js,jsx}\" && yarn lint --fix",
    "reinstall": "rm -rf node_modules/ && yarn install",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-flow-react-proptypes": "^25.1.0",
    "cross-env": "^5.1.4",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-compat": "^3.3.0",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.0.1",
    "flow-bin": "^0.107.0",
    "jest": "^24.9.0",
    "nodemon": "^1.17.3",
    "npm-run-all": "^4.0.2",
    "pm2": "^2.10.2",
    "postcss": "^6.0.21",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.5",
    "precss": "^3.1.2",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.1",
    "style-loader": "^0.21.0",
    "stylefmt": "^6.0.0",
    "stylelint": "^11.0.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.6.0",
    "webpack-bundle-analyzer": "^3.5.0",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "compression": "^1.6.2",
    "express": "^4.16.3",
    "lodash": "^4.17.4",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-helmet": "^5.1.3",
    "react-hot-loader": "^4.1.1",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1"
  }
}
