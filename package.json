{
	"name": "js-boilerplate",
	"version": "1.0.0",
	"description": "Personal boilerplate",
	"main": "index.js",
	"author": "John Tran",
	"license": "MIT",
	"scripts": {
		"start": "npm-run-all -p dev:start dev:wds",
		"dev:start": "nodemon -e js,jsx --ignore lib --ignore dist --exec babel-node src/server",
		"dev:wds": "webpack-dev-server --progress",
		"prod:build": "rimraf lib dist && babel src -d lib --ignore .test.js && cross-env NODE_ENV=production webpack -p --progress",
		"prod:start": "cross-env NODE_ENV=production pm2 start lib/server && pm2 logs",
		"prod:stop": "pm2 delete server",
		"lint": "eslint src webpack.config.babel.js --ext .js,.jsx",
		"lint-fix": "prettier --single-quote --write \"{,!(dist|flow-typed|lib)/**}/*.{js,jsx}\" && yarn lint -- --fix",
		"test": "yarn lint && flow && jest --coverage",
		"precommit": "yarn test",
		"prepush": "yarn test && yarn prod:build"
	},
	"browserslist": [
		"> 1%"
	],
	"devDependencies": {
		"babel-cli": "^6.24.1",
		"babel-core": "^6.25.0",
		"babel-eslint": "^7.2.3",
		"babel-jest": "^20.0.3",
		"babel-loader": "^7.0.0",
		"babel-plugin-flow-react-proptypes": "^3.2.1",
		"babel-preset-env": "^1.5.2",
		"babel-preset-flow": "^6.23.0",
		"babel-preset-react": "^6.24.1",
		"cross-env": "^5.0.1",
		"eslint": "^3.19.0",
		"eslint-config-airbnb": "^15.0.1",
		"eslint-plugin-compat": "^1.0.3",
		"eslint-plugin-flowtype": "^2.34.0",
		"eslint-plugin-import": "^2.2.0",
		"eslint-plugin-jsx-a11y": "^5.0.1",
		"eslint-plugin-react": "^7.0.1",
		"flow-bin": "^0.47.0",
		"husky": "^0.13.4",
		"jest": "^20.0.4",
		"nodemon": "^1.11.0",
		"npm-run-all": "^4.0.2",
		"pm2": "^2.5.0",
		"postcss": "^6.0.4",
		"postcss-cssnext": "^2.11.0",
		"postcss-loader": "^2.0.6",
		"precss": "^2.0.0",
		"rimraf": "^2.6.1",
		"style-loader": "^0.18.2",
		"stylefmt": "^6.0.0",
		"stylelint": "^7.12.0",
		"webpack": "^2.6.1",
		"webpack-dev-server": "^2.4.5"
	},
	"dependencies": {
		"babel-polyfill": "^6.23.0",
		"compression": "^1.6.2",
		"express": "^4.15.3",
		"lodash": "^4.17.4",
		"react": "^15.5.4",
		"react-dom": "^15.5.4",
		"react-helmet": "^5.1.3",
		"react-hot-loader": "next",
		"react-router": "^4.1.1",
		"react-router-dom": "^4.1.1"
	}
}
